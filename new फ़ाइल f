<body>

  <h2>Profile List</h2>
  <input type="text" id="searchBox" placeholder="Search by Name or Number...">
  
  <div id="profiles"></div>
  <div id="details"></div>

  <!-- Add Profile Form -->
  <div id="profileForm">
    <input type="file" id="photoUpload" accept="image/*">
    <input type="text" id="name" placeholder="Name">
    <input type="text" id="number" placeholder="Number">
    <input type="text" id="address" placeholder="Address">
    <textarea id="notes" placeholder="Enter Notes..."></textarea>
    <button onclick="addProfile()">Save Profile</button>
  </div>

  <!-- Fixed Add Profile Button -->
  <button id="addProfileBtn" onclick="toggleForm()">+ Add Profile</button>

  <script>
    let profiles = [
      { photo: "https://via.placeholder.com/40", name: "राहुल रैखवार", number: "9876543210", address: "दिल्ली", notes: "Friend from college" },
      { photo: "https://via.placeholder.com/40", name: "अमित शर्मा", number: "9123456780", address: "मुंबई", notes: "Office colleague" }
    ];

    let uploadedPhoto = "";

    function toggleForm() {
      let form = document.getElementById("profileForm");
      form.style.display = (form.style.display === "block") ? "none" : "block";
    }

    // जब फोटो चुनी जाएगी तो Base64 में सेव कर लो
    document.getElementById("photoUpload").addEventListener("change", function(e) {
      let file = e.target.files[0];
      if (file) {
        let reader = new FileReader();
        reader.onload = function(ev) {
          uploadedPhoto = ev.target.result; // Base64 photo save
        };
        reader.readAsDataURL(file);
      }
    });

    function addProfile() {
      let name = document.getElementById("name").value.trim();
      let number = document.getElementById("number").value.trim();
      let address = document.getElementById("address").value.trim();
      let notes = document.getElementById("notes").value.trim();

      if (name && number && address) {
        profiles.push({ 
          photo: uploadedPhoto || "https://via.placeholder.com/40", 
          name, number, address, notes 
        });
        renderProfiles();
        document.getElementById("name").value = "";
        document.getElementById("number").value = "";
        document.getElementById("address").value = "";
        document.getElementById("notes").value = "";
        document.getElementById("photoUpload").value = "";
        uploadedPhoto = "";
        toggleForm();
      } else {
        alert("कृपया सभी जानकारी भरें!");
      }
    }

    function renderProfiles() {
      let profilesDiv = document.getElementById("profiles");
      profilesDiv.innerHTML = "";
      let searchVal = document.getElementById("searchBox").value.trim().toLowerCase();

      profiles.forEach((profile, index) => {
        let nameLower = profile.name.toLowerCase();
        let numberLower = profile.number.toLowerCase();

        if (searchVal) {
          if (!nameLower.startsWith(searchVal) && !numberLower.startsWith(searchVal)) {
            return;
          }
        }

        let highlightedName = profile.name;
        if (searchVal && nameLower.startsWith(searchVal)) {
          highlightedName = `<mark>${profile.name.substring(0, searchVal.length)}</mark>${profile.name.substring(searchVal.length)}`;
        }

        let highlightedNumber = profile.number;
        if (searchVal && numberLower.startsWith(searchVal)) {
          highlightedNumber = `<mark>${profile.number.substring(0, searchVal.length)}</mark>${profile.number.substring(searchVal.length)}`;
        }

        let div = document.createElement("div");
        div.className = "profile-item";
        div.innerHTML = `<img src="${profile.photo}" class="profile-photo"> ${highlightedName} (${highlightedNumber})`;
        div.onclick = () => showDetails(index);
        profilesDiv.appendChild(div);
      });
    }

    function showDetails(index) {
      let profile = profiles[index];
      let detailsDiv = document.getElementById("details");
      detailsDiv.style.display = "block";
      document.getElementById("profiles").style.display = "none";
      document.getElementById("searchBox").style.display = "none";

      detailsDiv.innerHTML = `
        <h3>Profile Details</h3>
        <img src="${profile.photo}" class="details-photo">
        <p><b>Name:</b> ${profile.name}</p>
        <p><b>Number:</b> ${profile.number}</p>
        <p><b>Address:</b> ${profile.address}</p>
        <pre><b>Notes:</b>\n${profile.notes}</pre>
        <button onclick="goBack()">⬅ Back</button>
      `;
    }

    function goBack() {
      document.getElementById("details").style.display = "none";
      document.getElementById("profiles").style.display = "block";
      document.getElementById("searchBox").style.display = "block";
    }

    document.getElementById("searchBox").addEventListener("input", renderProfiles);
    renderProfiles();
  </script>
</body>
</html>
