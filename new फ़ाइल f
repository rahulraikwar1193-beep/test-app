    .profile-photo {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      border: 1px solid #ddd;
    }
    #addProfileBtn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      padding: 12px 20px;
      border: none;
      background: #4f46e5;
      color: white;
      border-radius: 50px;
      cursor: pointer;
      font-size: 16px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }
    #addProfileBtn:hover {
      background: #4338ca;
    }
    #profileForm {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background: #fff;
      border-top: 2px solid #4f46e5;
      padding: 15px;
      display: none;
      box-shadow: 0 -2px 6px rgba(0,0,0,0.2);
    }
    input, textarea {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 6px;
      margin: 5px 0;
      width: 95%;
    }
    textarea {
      height: 100px;
      resize: vertical;
    }
    button {
      padding: 10px 20px;
      border: none;
      background: #4f46e5;
      color: white;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 10px;
    }
    button:hover {
      background: #4338ca;
    }
    #details {
      margin: 20px auto;
      width: 90%;
